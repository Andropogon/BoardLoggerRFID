<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="textSmallStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/aleo_regular</item>
    </style>

    <style name="textMediumStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/aleo_regular</item>
    </style>

    <style name="textMediumStyleLight">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/aleo_light</item>
    </style>

    <style name="textLargeStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">32sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/aleo_regular</item>
    </style>
</resources>
